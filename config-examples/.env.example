# MA-ISA Environment Variables Configuration
# Copy this file to .env and customize for your environment

# Global Settings
ISA_LEARNING_RATE=0.1
ISA_MIN_OBSERVATIONS=10
# ISA_MASTER_SEED=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Dimension 0: Financial Transactions
ISA_DIM0_NAME="Financial Transactions"
ISA_DIM0_THRESHOLD=1000
ISA_DIM0_STRATEGY=ImmediateHeal
ISA_DIM0_CRITICAL=true
ISA_DIM0_WEIGHT=1.0

# Dimension 1: Temporal Sequence
ISA_DIM1_NAME="Temporal Sequence"
ISA_DIM1_THRESHOLD=5000
ISA_DIM1_STRATEGY=MonitorOnly
ISA_DIM1_CRITICAL=false
ISA_DIM1_WEIGHT=0.8

# Dimension 2: Hardware Events
ISA_DIM2_NAME="Hardware Events"
ISA_DIM2_THRESHOLD=2000
ISA_DIM2_STRATEGY=Quarantine
ISA_DIM2_CRITICAL=false
ISA_DIM2_WEIGHT=0.9

# Dimension 3: Network Communication
ISA_DIM3_NAME="Network Communication"
ISA_DIM3_THRESHOLD=3000
ISA_DIM3_STRATEGY=ImmediateHeal
ISA_DIM3_CRITICAL=true
ISA_DIM3_WEIGHT=0.95

# Environment-specific overrides
# Uncomment and modify for dev/staging/prod

# Development
# ISA_DIM0_THRESHOLD=10000  # More lenient in dev

# Staging
# ISA_LEARNING_RATE=0.05    # Slower learning in staging

# Production
# ISA_DIM0_CRITICAL=true    # Strict in production
# ISA_MIN_OBSERVATIONS=100  # More data before adapting
